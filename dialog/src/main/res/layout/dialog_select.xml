<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_background_radius_10"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:text="请选择"
        android:textColor="@color/dialog_title_text_color"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:gravity="center"
        android:id="@+id/dialog_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:text="内容"
        android:textColor="@color/dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/dialog_select_content"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>


    <View
        android:layout_marginTop="20dp"
        android:background="@color/background_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="取消"
            android:gravity="center"
            android:id="@+id/dialog_select_cancel"
            android:textColor="@color/dialog_button_cancel_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

        </TextView>

        <View
            android:background="@color/background_gray"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            ></View>


        <TextView
            android:text="确认"
            android:gravity="center"
            android:id="@+id/dialog_select_confirm"
            android:textColor="@color/dialog_button_confirm_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

        </TextView>
    </LinearLayout>









</LinearLayout>
