<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_radius_10"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_battery_s_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16dp"
        android:textColor="@color/dialog_title_text_color"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <com.zyyoona7.wheel.WheelView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_battery_s_WV"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </com.zyyoona7.wheel.WheelView>

<TextView
    android:id="@+id/dialog_battery_S_confirm"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:textColor="@color/dialog_button_confirm_background"
    android:textSize="14dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"></TextView>



</LinearLayout>
