<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_radius_10"
    android:layout_height="wrap_content">
    <TextView
        android:text="请输入"
        android:gravity="center"
        android:id="@+id/dialog_input_title"
        android:textSize="16dp"
        android:textColor="@color/dialog_title_text_color"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:hint="请输入内容"

        android:textSize="14dp"
        android:id="@+id/dialog_input_edit"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_background_radius_5"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </EditText>

    <TextView
        android:background="@color/background_gray"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="取消"
            android:gravity="center"
            android:id="@+id/dialog_input_cancel"
            android:textColor="@color/dialog_button_cancel_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

        </TextView>
        <View
            android:background="@color/background_gray"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"></View>


        <TextView
            android:text="确认"
            android:gravity="center"
            android:id="@+id/dialog_input_confirm"
            android:textColor="@color/dialog_button_confirm_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

        </TextView>

    </LinearLayout>




</LinearLayout>
