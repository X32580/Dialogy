<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_radius_10"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_auto_time_title"
            android:textSize="16dp"
            android:textColor="@color/back"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    <com.zyyoona7.picker.OptionsPickerView
        android:id="@+id/dialog_auto_time_PV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/background_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


    <TextView
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:id="@+id/dialog_auto_time_canfrim"
        android:textSize="18dp"
        android:textColor="@color/dialog_button_confirm_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </TextView>



</LinearLayout>
