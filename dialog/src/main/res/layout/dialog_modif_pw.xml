<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_revise_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/back"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/dialog_revise_oldTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText

        android:textSize="12dp"
        android:maxLength="6"
        android:id="@+id/dialog_revise_oldTEd"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_background_radius_5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </EditText>

    <TextView
        android:id="@+id/dialog_revise_newTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:textColor="@color/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:textSize="12dp"

        android:maxLength="6"
        android:id="@+id/dialog_revise_newEd"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_background_radius_5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </EditText>

    <TextView
        android:id="@+id/dialog_revise_confirmTitle"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:textColor="@color/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:textSize="12dp"

        android:maxLength="6"
        android:id="@+id/dialog_revise_confirmEd"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_background_radius_5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </EditText>
    <View
        android:background="@color/bg_garry"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"></View>

    <LinearLayout

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_modif_left"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/dialog_button_cancel_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="44dp">

        </TextView>
        <TextView
            android:background="@color/bg_garry"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:id="@+id/dialog_modif_right"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/dialog_button_confirm_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="44dp">

        </TextView>
    </LinearLayout>





</LinearLayout>
