<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogBackground" parent="android:Theme.Dialog">
        <item name="android:background">@drawable/dialog_background_radius_10</item>
        <item name="android:windowBackground">@drawable/dialog_background_radius_10</item>
        <item name="android:windowNoTitle" >true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogLoading" parent="android:Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle" >true</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="DialogBackgroundTransparent" parent="android:Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle" >true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
